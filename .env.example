# ==================================
# CONFIGURACIÓN DE LA BASE DE DATOS
# ==================================
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=root
DB_NAME=database
DB_PORT=3306

# ==================================
# CONFIGURACIÓN DE LA API
# ==================================
API_V1_STR=/api/v1
# IMPORTANTE: Genera una nueva clave secreta para producción.
# Puedes generar una ejecutando en tu terminal: python -c 'import secrets; print(secrets.token_urlsafe(32))'
SECRET_KEY=tu-clave-secreta-muy-segura-aqui
DEBUG=True

# ==================================
# CONFIGURACIÓN DE CORS
# ==================================
# CORREGIDO: Se usa el formato de array JSON para que Pydantic lo interprete como una lista.
# Esto permite peticiones desde cualquier origen, ideal para tu app de React Native.
CORS_ALLOWED_ORIGINS='["*"]'

# ==================================
# AJUSTES DE RECONOCIMIENTO FACIAL
# ==================================
FACE_CONFIDENCE_THRESHOLD=0.70
FACE_DISTANCE_THRESHOLD=0.4
MAX_FACE_MATCHES=5

# ==================================
# AJUSTES DE SUBIDA DE ARCHIVOS
# ==================================
MAX_UPLOAD_SIZE=10485760
TEMP_UPLOAD_PATH=./temp_uploads
# CORREGIDO: Se usa el formato de array JSON para que Pydantic lo interprete como una lista de extensiones permitidas.
ALLOWED_IMAGE_EXTENSIONS='["jpg", "jpeg", "png"]'

# ==================================
# CONFIGURACIÓN DE LOGGING
# ==================================
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# ==================================
# Puerto de la API
# ==================================
PORT=8000

# ==================================
# IMAGE URL CONFIGURATION
# ==================================
# URL base para las imágenes de los tripulantes
# Formato: {IMAGE_BASE_URL}/{crew_id}/{imagen}
IMAGE_BASE_URL=https://echcarst.myscriptcase.com/scriptcase9/file/img/Cultura